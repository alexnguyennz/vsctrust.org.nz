---
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
---

<h2>Subscribe to our newsletter</h2>
<div id="mc_embed_shell">
  <div id="mc_embed_signup">
    <form
      action="https://vsctrust.us11.list-manage.com/subscribe/post?u=8931bff157bafa644bad41e4a&id=ea3332c16f&f_id=00858de0f0"
      method="post"
      id="mc-embedded-subscribe-form"
      name="mc-embedded-subscribe-form"
      class="validate mx-auto grid max-w-sm gap-6"
      target="_self"
    >
      <div id="mc_embed_signup_scroll">
        <div class="mc-field-group">
          <Label htmlFor="mce-EMAIL" className="required">Email Address</Label>
          <Input
            className="shadow-border"
            type="email"
            id="mce-EMAIL"
            name="EMAIL"
            required
          />
        </div>
      </div>

      <div class="mc-field-group">
        <Label htmlFor="mce-FNAME" className="required">First Name</Label>
        <Input
          className="shadow-border"
          type="text"
          id="mce-FNAME"
          name="FNAME"
          required
        />
      </div>

      <div class="mc-field-group">
        <Label htmlFor="mce-LNAME" className="required">Last Name</Label>
        <Input
          className="shadow-border"
          type="text"
          id="mce-LNAME"
          name="LNAME"
          required
        />
      </div>

      <div id="mce-responses" class="clear foot hidden">
        <div class="response" id="mce-error-response" style="display: none;">
        </div>
        <div class="response" id="mce-success-response" style="display: none;">
        </div>
      </div>
      <div aria-hidden="true" style="position: absolute; left: -5000px;">
        /* real people should not fill this in and expect good things - do not
        remove this or risk form bot signups */
        <input
          type="text"
          name="b_8931bff157bafa644bad41e4a_ea3332c16f"
          tabindex="-1"
          value=""
        />
      </div>
      <div class="optionalParent">
        <div class="clear foot flex items-center justify-between">
          <button
            type="submit"
            class="shadow-button place-self-start bg-gray-600">Subscribe</button
          >

          <!--<p>
            <a
              href="http://eepurl.com/ja5Nuc"
              title="Mailchimp - email marketing made easy and fun"
              ><span
                style="display: inline-block; background-color: transparent; border-radius: 4px;"
                ><img
                  class="refferal_badge"
                  src="https://digitalasset.intuit.com/render/content/dam/intuit/mc-fe/en_us/images/intuit-mc-rewards-text-dark.svg"
                  alt="Intuit Mailchimp"
                  style="width: 100px; height: 40px; display: flex; padding: 2px 0px; justify-content: center; align-items: center;"
                /></span
              ></a
            >
          </p>-->
        </div>
      </div>
    </form>
  </div>
</div>

<style>
  label.required:after {
    @apply font-bold text-red-500;
    content: " *";
  }
</style>
