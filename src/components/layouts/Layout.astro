---
import "@/styles/globals.css";

import { ViewTransitions } from "astro:transitions";

import Header from "@/components/header/Header.astro";
import Footer from "@/components/footer/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title} - Vulnerable Support Charitable Trust</title>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="We are a registered charity keen on improving the well being of Wellington's most vulnerable people."
    />
    <meta
      name="keywords"
      content="charity, wellington, trust, nz, new zealand"
    />
    <meta name="viewport" content="width=device-width" />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <link
      rel="preload"
      href="/fonts/Mulish.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <ViewTransitions fallback="swap" />

    <slot name="head" />
  </head>
  <body class="relative flex min-h-screen flex-col">
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>
