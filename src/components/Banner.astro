---
import { Picture } from "astro:assets";

interface Props {
  title: string;
  programme: string;
}

const { programme } = Astro.props;
---

<section class="pb-5">
  <Picture
    src={import(
      `../assets/img/banner/${programme}.${programme === "default" ? "jpg" : "png"}`
    )}
    width="2000"
    height="1250"
    formats={["avif", "webp"]}
    alt={`${programme} banner`}
    class="max-h-[200px] w-full bg-gray-100 object-cover object-bottom sm:max-h-[350px] lg:max-h-[400px] 2xl:max-h-[600px]"
  />
</section>
