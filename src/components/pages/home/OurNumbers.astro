---
import { Icon } from "astro-icon/components";

import { NumberTicker } from "@/components/ui/number-ticker";

interface Props {
  page: {
    schools: number;
    take10Visitors: number;
    waterGiven: number;
    mealsForTamariki: number;
  };
}

const {
  page: { schools, take10Visitors, waterGiven, mealsForTamariki },
} = Astro.props;
---

<section class="bg-slate-800 text-white">
  <div class="section-container">
    <h2 class="text-white">Our numbers</h2>
    <div class="grid justify-center gap-5 lg:grid-cols-4">
      <section>
        <Icon name="tabler:backpack" class="h-8 w-8" />
        <div>
          <NumberTicker value={schools} client:visible />
          <h4>schools and kohanga reos</h4>
        </div>
      </section>
      <section>
        <Icon name="tabler:friends" class="h-8 w-8" />
        <div>
          <NumberTicker value={take10Visitors} client:visible />
          <h4>Take 10 visitors</h4>
        </div>
      </section>
      <section>
        <Icon name="tabler:bottle" class="h-8 w-8" />
        <div>
          <NumberTicker value={waterGiven} client:visible />
          <h4>litres of water given</h4>
        </div>
      </section>
      <section>
        <Icon name="tabler:tools-kitchen-2" class="h-8 w-8" />
        <div>
          <NumberTicker value={mealsForTamariki} client:visible />
          <h4>meals for tamariki</h4>
        </div>
      </section>
    </div>
  </div>
</section>

<style>
  section section {
    @apply flex items-center gap-3 lg:justify-center;
  }

  h4 {
    @apply text-slate-300;
  }
</style>
