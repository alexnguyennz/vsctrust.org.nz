---
import { Image } from "astro:assets";
---

<section class="section-container">
  <h2>How you can help</h2>
  <div class="flex flex-wrap justify-center gap-6 lg:gap-10">
    <a href="/donate/" rel="prefetch">
      <Image
        src={import("@/assets/img/home/donate.png")}
        width="48"
        height="48"
        alt="donate image"
        transition:name="donate"
      />
      <h3>Make a Donation</h3>
    </a>

    <a href="/volunteer/" rel="prefetch">
      <Image
        src={import("@/assets/img/home/volunteer.png")}
        width="48"
        height="48"
        alt="volunteer image"
        transition:name="volunteer"
      />
      <h3>Become a Volunteer</h3>
    </a>

    <a href="/sponsor-a-school/" rel="prefetch">
      <Image
        src={import("@/assets/img/home/sponsor.png")}
        width="48"
        height="48"
        alt="sponsor image"
        transition:name="sponsor"
      />
      <h3>Sponsor a School</h3>
    </a>
  </div>
</section>

<style>
  h3 {
    @apply mt-2 text-center text-lg font-extrabold text-black;
  }

  a {
    @apply flex flex-col rounded-md no-underline transition hover:scale-105 hover:no-underline;
  }

  img {
    @apply self-center;
  }
</style>
