---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
---

<article class="flex flex-col">
  <a
    href={`/news/${post.id}/`}
    rel="prefetch"
    class="group overflow-hidden rounded-3xl shadow-lg"
  >
    <Image
      src={post.data.image}
      width={500}
      alt={post.data.title}
      transition:name={`news-image-${post.id}`}
      class="aspect-[4/3] w-full rounded-3xl object-cover transition duration-500 group-hover:scale-110"
    />
  </a>

  <div class="mt-4 flex flex-1 flex-col">
    <h2 class="line-clamp-1 font-semibold">
      <a href={`/news/${post.id}/`}>{post.data.title}</a>
    </h2>
    <h3 class="mt-auto text-sm">
      {
        new Date(post.data.date).toLocaleDateString("en-NZ", {
          year: "numeric",
          month: "long",
          day: "numeric",
        })
      }
    </h3>
  </div>
</article>
