---
import { getEntry, render } from "astro:content";
import { Image } from "astro:assets";

import { Icon } from "astro-icon/components";

import { marked } from "marked";

import Layout from "@/components/layouts/Layout.astro";
import Section from "@/components/layouts/section.astro";
import Banner from "@/components/Banner.astro";

const entry = await getEntry("pages", "donate");
if (!entry) throw new Error("Could not find page");

const { Content } = await render(entry);
---

<Layout title={entry.data.title}>
  <Banner title={entry.data.title} programme="donate" />

  <Section>
    <Image
      src={import("@/assets/img/home/donate.png")}
      width="77"
      height="77"
      alt="donate image"
      fetchpriority="high"
      loading="eager"
      class="mx-auto"
      transition:name="donate"
    /></Section
  >

  <Section class="grid gap-6 lg:grid-cols-2 lg:gap-9">
    <div>
      <Fragment set:html={marked.parse(entry.data.topContent)} />

      <div>
        <p>Your donation will go towards:</p>
        <ul class="ml-0 space-y-3 [&>li]:flex [&>li]:items-center [&>li]:gap-2">
          <li>
            <Icon name="tabler:bottle" class="size-6" />
            {entry.data.items[0]}
          </li>
          <li>
            <Icon name="lucide:person-standing" class="size-6" />
            {entry.data.items[1]}
          </li>
          <li>
            <Icon name="lucide:shirt" class="size-6" />
            {entry.data.items[2]}
          </li>
          <li>
            <Icon name="tabler:blender" class="size-6" />
            {entry.data.items[3]}
          </li>
        </ul>
      </div>
    </div>

    <div class="space-y-6" transition:animate="none">
      <iframe
        title="Donorbox"
        name="donorbox"
        src="https://donorbox.org/embed/vulnerable-support-charitable-trust"
        loading="lazy"
        class="mx-auto h-[620px] w-[300px] rounded-2xl shadow-lg sm:h-[612px] sm:w-[400px]"
      ></iframe>

      <div class="mx-auto text-sm"><Content /></div>
    </div>
  </Section>
</Layout>
